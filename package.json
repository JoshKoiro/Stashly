{
  "name": "stashly",
  "version": "1.0.0",
  "description": "A modern inventory management system for tracking physical items using QR codes",
  "main": "src/backend/server.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "ts-node-dev --project tsconfig.backend.json --respawn --transpile-only src/backend/server.ts",
    "build": "tsc -p tsconfig.backend.json && vite build",
    "start": "cross-env NODE_ENV=production node dist/backend/server.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "keywords": [
    "inventory",
    "management",
    "qr-code",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0",
    "qrcode": "^1.5.4",
    "react-router-dom": "^7.4.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.28",
    "@types/pdfkit": "^0.13.9",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.5",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.19",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2",
    "vite": "^5.4.16"
  }
}
